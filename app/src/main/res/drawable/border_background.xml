<!-- border_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo cuando está enfocado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Color del borde cuando está enfocado -->
            <solid
                android:color="@color/white_with_transparency" /> <!-- Color del fondo con transparencia -->
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="2dp" /> <!-- Espacio entre el borde y el contenido -->
        </shape>
    </item>
    <!-- Fondo cuando no está enfocado -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp" /> <!-- Ancho del borde en dp -->
            <solid
                android:color="@color/white_with_transparency" /> <!-- Color del fondo con transparencia -->
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="2dp" /> <!-- Espacio entre el borde y el contenido -->
        </shape>
    </item>
</selector>
